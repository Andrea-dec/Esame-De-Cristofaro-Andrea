function dir_search { 
 dir="$1"
 if [[ -d "$dir" ]]; then
   echo "Directory exists."
   cd $dir 
   echo ''Regular files:''
   find . -maxdepth 1 -type f
   echo ''Directories:''
   find . -maxdepth 1 -type d
   echo ''Empty files:''
   find . -maxdepth 1 -empty
   else
  echo "Directory doesn't exists."
  echo (($?+1))
fi
}

dir_search '/filepath'
