function file_count { 
 dir="$1"
 local tot
 if [[ -d "$dir" ]]; then
   echo "Directory exists."
   cd $dir 
   tot=$(ls -l | egrep -i -v '^d' | wc -l)
   echo $((tot - 1)) 
   else
  echo "Directory doesn't exists."
  echo 'exit status:' $(($?+1))
fi
}

file_count '/etc'
file_count '/var'
file_count '/usr/bin'
